extends layoutBS

block content
  style(html,body,h1,h2,h3,h4,h5 {font-family: "Open Sans", sans-serif})
  body.w3-theme-l5
    .w3-container.w3-content(style="max-width:1400px;margin-top:80px")
      .w3-row
        .w3-col.m4  
          .w3-card.w3-round.w3-white
            .w3-container
              h4.w3-center My Profile
              p.w3-center
                if profile.image
                  img.w3-circle(src="../images/" +profile.image+ ".png" style="height:106px;width:106px" alt="Avatar")
                else
                  img.w3-circle(src="../images/profile1.png" style="height:106px;width:106px" alt="Avatar")
              hr
              p
                i.fa.fa-pencil.fa-fw.w3-margin-right.w3-text-theme
                |  #{user.googlename}
              p
                i.fa.fa-male.fa-fw.w3-margin-right.w3-text-theme
                |  #{profile.gender}
              p
                i.fa.fa-home.fa-fw.w3-margin-right.w3-text-theme
                |  #{profile.home}
              p
                i.fa.fa-birthday-cake.fa-fw.w3-margin-right.w3-text-theme
                |  #{profile.dob}
              p
                i.fa.fa-phone.fa-fw.w3-margin-right.w3-text-theme
                |  #{profile.phone}
              p
                i.fa.fa-hand-peace-o.fa-fw.w3-margin-right.w3-text-theme
                |  #{profile.about}
              p.w3-center
                a.w3-button.w3-white.w3-border.w3-border-teal.w3-small.w3-center(href="/updateProfile") Edit your info
          br
            
        .w3-col.m8
          form.text-monospace(method="post" action="saveSetting")
            .w3-container.w3-card.w3-white.w3-round.w3-margin
              h5.w3-text-dark-grey.text-bold 
                b.bold.w3-text Event settings
              br
              input.w3-check(type = "checkbox" name = "voice" checked = setting.voice)
              label Enable voice functions
              br
              br
              .row
                .formGroup.col-md-3
                  label Time format 
                .formGroup.col-md-6
                  select.form-control(name="timeFormat")
                    option(selected="") #{setting.timeFormat}
                    option 1:00 pm
                    option 13:00
              br
              .row
                .formGroup.col-md-3
                  label Duration set 
                .formGroup.col-md-6
                  select.form-control(name="durationSet")
                    option(selected="") #{setting.durationSet}
                    option 10 min
                    option 20 min 
                    option 30 min
                    option 40 min
                    option 50 min
                    option 60 min
              br
              .row
                .formGroup.col-md-3
                  label Profile permission 
                .formGroup.col-md-6
                  select.form-control(name="profilePermission")
                    option(selected="") #{setting.profilePermission}
                    option Allow all users to see my profile
                    option Allow only friends to see my profile 
                    option Allow only myself to see my profile
              br
              .row
                .formGroup.col-md-3
                  label Notifications
                .formGroup.col-md-6
                  select.form-control(name="notimethod")
                    option(selected="") #{setting.notimethod}
                    option Don't notify me 
                    option SON notification 
                    option SON alert 
              br
            .w3-container.w3-card.w3-white.w3-round.w3-margin
              h5.w3-text-dark-grey.text-bold 
                b.bold View settings
              br
              input.w3-check(type = "checkbox" name = "weekend" checked=setting.weekend)
              label Show weekend
              br
              input.w3-check(type = "checkbox" name = "weeknumber" checked=setting.weeknumber)
              label Show weeknumber
              br
              input.w3-check(type = "checkbox" name = "eventEnd" checked=setting.eventEnd)
              label Show event end time
              br
              input.w3-check(type = "checkbox" name = "fixedWeek" checked=setting.fixedWeek)
              label Show fixed week 
              br
              br
              .row
                .formGroup.col-md-3
                  label Default view  
                .formGroup.col-md-6
                  select.form-control(name="view")
                    option(selected="") #{setting.view}
                    option Daily
                    option Weekly 
                    option Monthly
              br
              .row
                .formGroup.col-md-3
                  label Text color  
                .formGroup.col-md-6
                  select.form-control(name="color")
                    option(selected="") #{setting.color}
                    option Black(default)
                    option Green 
                    option Grey
                    option Red
              br
            input.w3-button.w3-teal.w3-section.w3-right(type="submit" value="SAVE") 
          br
          br
            
