extends layoutBS2

block content
  .margin
    .row
      .col-12.text-center
        h1.text-center= title
        input.btTxt.submit(type="image" src="/images/microphone.png" name="saveForm" width="20" align="middle")
    hr
    .row
      .col-4
        label New Event 
        textarea(rows="5" cols="52")
        br
        br
        br
        form(method="post")
          .form-row
            .formGroup.col-2
              label Date 
            .formGroup.col-10.text-right
              input(type="date" name="Date")
          br
          .form-row
            .formGroup.col-2
              label Time 
            .formGroup.col-10.text-right
              input(type="time" name="time")
          br
          .form-row
            .formGroup.col-2
              label Location  
            .formGroup.col-10.text-right
              input(type="text" name="location")      
          br
          .form-row
            .formGroup.col-2
              label People 
            .formGroup.col-10.text-right
              input(type="text" name="people")
          hr
        
        input.text-center.btn.btn-success(type="submit" style="background-color: #3c7045;")
