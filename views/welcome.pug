      a.w3-button.w3-large.w3-teal(href="javascript:void(0)" title="Google +")
        i.fa.fa-google-plus 
      | 
      a.w3-button.w3-large.w3-teal(href="javascript:void(0)" title="Google +")
        i.fa.fa-instagram 
      | 
      a.w3-button.w3-large.w3-teal.w3-hide-small(href="javascript:void(0)" title="Linkedin")
        i.fa.fa-linkedin 
      a.w3-button.w3-right(href="/")
        span.w3-xlarge
          i.fa.fa-chevron-circle-up
