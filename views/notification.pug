extends layoutBS
block content
  body
    br
    br
    br
    br
    .margin
      h4.text-monospace Notifications
      .row 
        .col-4
          #list-tab.list-group(role="tablist")
            a#list-reminder-list.list-group-item.list-group-item-action.active(data-toggle="list" href="#schedulereminder" role="tab" aria-controls="reminder") Schedule Reminder
            a#list-request-list.list-group-item.list-group-item-action(data-toggle="list" href="#friendrequest" role="tab" aria-controls="request") Friend Request
            a#list-invitation-list.list-group-item.list-group-item-action(data-toggle="list" href="#eventinvitation" role="tab" aria-controls="invitation") Event Invitation
        .col-8
          #nav-tabContent.tab-content

            #schedulereminder.tab-pane.fade.show.active(role="tabpanel" aria-labelledby="list-event-list")
              //-each input in inputs
                .card.bg-light.mb-3(style="max-width: 50rem;")
                  .card-header 
                    | Reminder
                    .alignright.text-monospace now
                  .card-body
                    h5.font-weight-bold #{input.title}
                    p.card-text

                      | Remind me to #{input.title} at #{input.start}
            
            #friendrequest.tab-pane.fade(role="tabpanel" aria-labelledby="list-request-list")
              each noti in notis
                if noti.type == "friend request"
                  .card.bg-light.mb-3(style="max-width: 50rem;")
                    .card-header 
                      | Friend request
                      .alignright.text-monospace now
                    .card-body
                      form.form-inline.mr-auto(method="post" action="")                      
                        input.form-control(name="from" type="hidden" value=noti.from)
                        input.form-control(name="fromname" type="hidden" value=noti.fromname)
                        br
                        h5 #{noti.content}
                          br
                          br
                          .row
                            .col-3
                              input.w3-button.w3-teal(type='submit' name = "accept" value="Accept") 
                            .col-3
                              input.w3-button.w3-teal(type='submit' name = "cancel" value="Cancel") 

            #eventinvitation.tab-pane.fade(role="tabpanel" aria-labelledby="list-invitation-list")
              each noti in notis
                if noti.type == "event invitation"
                  .card.bg-light.mb-3(style="max-width: 50rem;")
                    .card-header 
                      | Event Invitation
                      .alignright.text-monospace now
                    .card-body
                      form.form-inline.mr-auto(method="post" action="")                      
                        input.form-control(name="from" type="hidden" value=noti.from)
                        input.form-control(name="fromname" type="hidden" value=noti.fromname)
                        input.form-control(name="title" type="hidden" value=noti.title)
                        input.form-control(name="description" type="hidden" value=noti.description)
                        input.form-control(name="startDate" type="hidden" value=noti.sDate)
                        input.form-control(name="startTime" type="hidden" value=noti.sTime)
                        input.form-control(name="endDate" type="hidden" value=noti.eDate)
                        input.form-control(name="endTime" type="hidden" value=noti.eTime)
                        .row
                          .col-12
                            h5 #{noti.content}
                          .col-12
                            h5.font-weight-bold #{noti.title}
                            h5 #{noti.description}
                          .col-12
                            h5 Start Time: &nbsp #{noti.sDate} #{noti.sTime}
                            h5 End Time: &nbsp #{noti.eDate} #{noti.eTime}
                        .row
                          .col-6
                            input.w3-button.w3-teal(type='submit' name = "add" value="Add") 
                          .col-6
                            input.w3-button.w3-teal(type='submit' name = "decline" value="Decline") 
